<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.czw.eshop.entity.goods" table="tb_goods">
        <id name="goodID" column="g_id" >
            <generator class="increment"/>
        </id>

        <property name="goodName" column="g_name" length="20" not-null="true" type="java.lang.String"/>
        <property name="goodPrice" type="java.lang.Double" not-null="true" column="g_cost" />
        <property name="inventory" column="g_inv" length="20" not-null="true" type="int"/>
    </class>
</hibernate-mapping>