<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.czw.eshop.entity.Goods" table="tb_good" schema="shop">
        <id name="goodID" column="g_id">
            <generator class="increment"/>
        </id>
        <property name="goodName" column="g_name"/>
        <property name="goodPrice" column="g_cost"/>
        <property name="inventory" column="g_inv"/>
        <property name="imgSrc" column="imgsrc"/>
        <property name="Description" column="g_desc"/>
    </class>
</hibernate-mapping>